{
  "name": "ws-gateway-b2b",
  "version": "0.0.1",
  "description": "Servico de entrada do b2b",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --watch 'src/' --exec 'npm run tslint && npm run test && ts-node src/app.ts' -e ts",
    "build": "tsc",
    "test": "jest -o",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "prod": "npm run build && node dist/app.js",
    "testCoverage": "jest --coverage --coverageDirectory=output/coverage/jest"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "\\.test\\.ts",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "coverageReporters": [
      "text",
      "cobertura"
    ]
  },
  "repository": {
    "type": "git",
    "url": "http://192.168.150.11/b2b-services/ws-gateway-b2b.git"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "jest": "^24.7.1",
    "nodemon": "^1.18.11",
    "prettier": "1.17.0",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.1.0",
    "tslint": "^5.15.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.4.3",
    "typescript-eslint-parser": "^22.0.0"
  }
}